{%
    set data_attributes_str = (data_attributes is defined)
        ? ' ' ~ data_attributes|ez_data_attributes_serialize
        : ''
%}

{% set parameters = {
    "isEmbed": true
} %}
{% if location is defined %}
    <a href="{{ ez_path(location, parameters) }}"{% if class is defined %} class="{{ class }}"{% endif %}{{ data_attributes_str|raw }}>{{ content.name }}</a>
{% else %}
    <a href="{{ ez_path(content, parameters) }}"{% if class is defined %} class="{{ class }}"{% endif %}{{ data_attributes_str|raw }}>{{ content.name }}</a>
{% endif %}
